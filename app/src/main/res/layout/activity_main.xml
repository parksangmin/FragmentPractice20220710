<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <fragment
                android:id="@+id/firstFrag"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.sangmin.fragmentpractice20220710.Fragments.FirstFragment"/>

            <fragment
                android:id="@+id/secondFrag"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.sangmin.fragmentpractice20220710.Fragments.SecondFragment"/>

            <fragment
                android:id="@+id/thirdFrag"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.sangmin.fragmentpractice20220710.Fragments.ThirdFragment"/>


        </LinearLayout>



    </ScrollView>



</LinearLayout>